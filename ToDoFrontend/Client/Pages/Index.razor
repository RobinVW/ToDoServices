@page "/"
@inject NavigationManager navManager

<PageTitle>Index</PageTitle>
<AuthorizeView>
    <Authorized>
        <h1>Hello, @context.User?.Identity?.Name</h1>
        <p>Welcome to ToDo app by Robin Van Welden, click the button to see your boards</p>
        <RadzenButton Click=@OnClick Text="@text" />
    </Authorized>
    <NotAuthorized>
        <h1>Hello</h1>
        <p>Welcome to ToDo app by Robin Van Welden</p>
    </NotAuthorized>
</AuthorizeView>
@code {
    string text = "Boards";

    void OnClick()
    {
        navManager.NavigateTo("/boards");
    }
}
